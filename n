<?php
//Пользователь вводит число
$x = $_GET['x'];
echo 'Число '.$x.'<br>';
$a=1; //Переменная 1
$b=1; //Переменная 2
while ($x){ //Пока пользователь вводит число, можно было заменить while true, но это бесконечнее ввода числа пользователем.
		if ($a>$x){ //Никак не могу понять, - мы все время что-то должны класть в переменную $a?
		echo 'Задуманное число НЕ входит в числовой ряд ';		
		break;
		}
		else{
			if ($a==$x) {
			echo 'Задуманное число входит в числовой ряд';
			break;
			}
			else {
			$c=$x;
			$a=$a+$b;
			$b=$c;
			}
		}
}
	
?>
