<?php
//Пользователь вводит число
$x = $_GET['x'];
echo 'Число '.$x.'<br>';
$a=1; //Переменная 1
$b=1; //Переменная 2
while (true){ //Пока пользователь вводит число
		if ($a>$x){ 
		echo 'Задуманное число НЕ входит в числовой ряд ';		
		break;
		}
		else{
			if ($a==$x) {
			echo 'Задуманное число входит в числовой ряд';
			break;
			}
			else {
			$c=$a;//Вот тут была моя ошибка в логике!
			$a=$a+$b;
			$b=$c;
			}
		}
}
	
?>
